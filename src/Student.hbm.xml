<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="net.imwork.zhanlong.hibernate4.Student" table="student">

        <id name="id" column="id" type="string">
            <generator class="uuid"></generator>
        </id>
        <property name="name" column="name" type="string"/>

        <!--constrained="true" 设置延迟加载,并且在另外一方的class属性设置为lazy="true"-->
        <one-to-one name="idCard" class="net.imwork.zhanlong.hibernate4.IdCard" cascade="all" fetch="select">
        </one-to-one>



    </class>
</hibernate-mapping>